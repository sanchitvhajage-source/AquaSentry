<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hero_gradient"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/get_started_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#261B22"
                android:elevation="6dp"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/icon_tsunami"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/waves"
                    app:tint="#4ADE80"
                    android:contentDescription="Tsunami Icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aqua Sentry"
                android:textColor="#F0F6FC"
                android:textSize="36sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/manrope"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/app_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navigate rising waters with confidence. Real-time alerts, safety protocols, and community support."
                android:textColor="#8B949E"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/manrope"
                android:layout_marginBottom="24dp"
                android:paddingHorizontal="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#261B22"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/alert"
                        app:tint="#38BDF8"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Instant Alerts"
                            android:textColor="#F0F6FC"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/manrope"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get immediate notifications for your area."
                            android:textColor="#8B949E"
                            android:textSize="14sp"
                            android:fontFamily="@font/manrope"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#261B22"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/security"
                        app:tint="#4ADE80"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safety Protocols"
                            android:textColor="#F0F6FC"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/manrope"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step-by-step guidance to stay safe."
                            android:textColor="#8B949E"
                            android:textSize="14sp"
                            android:fontFamily="@font/manrope"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#261B22"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/map"
                        app:tint="#38BDF8"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interactive Maps"
                            android:textColor="#F0F6FC"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/manrope"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visualize flood zones and safe routes."
                            android:textColor="#8B949E"
                            android:textSize="14sp"
                            android:fontFamily="@font/manrope"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2F81F7"
        android:padding="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/manrope"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp" />

</RelativeLayout>