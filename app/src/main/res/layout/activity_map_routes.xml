<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1117">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_my_location_24"
        app:backgroundTint="#161B22"
        app:tint="#E6EDF3"
        android:contentDescription="Center on my location"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#161B22"
        app:cardCornerRadius="16dp"
        app:strokeWidth="1dp"
        app:strokeColor="#30363D">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/status_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flood Safety Status"
                android:textColor="#E6EDF3"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/status_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Press the button below to check your current location for flood risks."
                android:textColor="#7D8590"
                android:layout_marginTop="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/check_safety_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check My Location's Safety"
                android:layout_marginTop="16dp"
                android:paddingVertical="12dp"
                app:cornerRadius="8dp"
                app:backgroundTint="#388BFD"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>