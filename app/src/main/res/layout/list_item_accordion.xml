<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#161B22"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <RelativeLayout
        android:id="@+id/accordion_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_accordion"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_event_upcoming_24"
            app:tint="#38BDF8"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/text_accordion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon_accordion"
            android:layout_centerVertical="true"
            android:text="Before a Flood"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/manrope"/>

        <ImageView
            android:id="@+id/icon_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_expand_more_24"
            app:tint="#7D8A97"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/accordion_content_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="64dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone"> <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â€¢ Tune into local news, sign up for community alerts."
        android:textColor="#A0B3C1"
        android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>