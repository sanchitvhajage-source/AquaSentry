<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FloodAlert" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Your existing theme attributes -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Your existing custom style for the flood level diagram -->
    <style name="FloodLevelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#66000000</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--
    ====================================================================
    | ADDED: STYLES FOR SAFETY TIPS CARDS (To fix layout errors)       |
    ====================================================================
    -->

    <!-- Style for the main MaterialCardView that holds each section -->
    <style name="TipCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Style for the clickable LinearLayout that contains the title and icon -->
    <style name="TipCardLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Style for the main title of each card (e.g., "Before a Flood") -->
    <style name="TipCardTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for the LinearLayout that contains the hidden tips content -->
    <style name="TipSectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:visibility">gone</item> <!-- Hidden by default -->
    </style>

    <!-- Style for each individual tip TextView -->
    <style name="TipTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>